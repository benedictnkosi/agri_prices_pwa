{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["cypress"],

    "paths": {
      "@merlin-ui-kit/assets": ["./node_modules/merlin-ui-kit/dist/assets"],
      "@merlin-ui-kit/components": [
        "./node_modules/merlin-ui-kit/dist/components"
      ],
      "@merlin-ui-kit/components/*": [
        "./node_modules/merlin-ui-kit/dist/components/*"
      ]
    }
  },
  "include": ["src", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
